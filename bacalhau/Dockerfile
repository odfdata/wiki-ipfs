FROM node:16
ARG MUMBAI_PROVIDER
ARG CID_2_HASH_REGISTRY_ADDRESS
ARG ENDORSE_CID_ADDRESS
ENV MUMBAI_PROVIDER=$MUMBAI_PROVIDER
ENV CID_2_HASH_REGISTRY_ADDRESS=$CID_2_HASH_REGISTRY_ADDRESS
ENV ENDORSE_CID_ADDRESS=$ENDORSE_CID_ADDRESS
WORKDIR /usr/src/app
COPY . .
RUN yarn install
CMD ["npx", "ts-node", "index.ts"]
